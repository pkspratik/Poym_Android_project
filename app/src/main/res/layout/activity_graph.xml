<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:fontFamily="@font/lato"
                android:paddingLeft="4dp"
                android:text="Select Project :"
                android:textColor="#000"
                android:textSize="20sp"
                android:layout_weight="1.5"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:background="@drawable/spinner_border"
                android:layout_marginLeft="5dp">
                <Spinner
                    android:id="@+id/sp_project"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:fontFamily="@font/lato"
                    android:descendantFocusability="blocksDescendants"
                    android:drawSelectorOnTop="true"
                    android:spinnerMode="dropdown"/>
            </LinearLayout>
        </LinearLayout>
        <!-- <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="35dp"
             android:layout_marginRight="5dp"
             android:orientation="vertical"
             android:background="@drawable/spinner_border"
             android:layout_marginLeft="5dp">
             <Spinner
                 android:id="@+id/sp_chart"
                 android:layout_width="match_parent"
                 android:layout_height="35dp"
                 android:descendantFocusability="blocksDescendants"
                 android:drawSelectorOnTop="true"
                 android:spinnerMode="dropdown"/>
         </LinearLayout>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="3dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/percentage_line"
                android:layout_width="0dp"
                android:maxLines="1"
                android:padding="8dp"
                android:layout_margin="2dp"
                android:layout_height="wrap_content"
                android:text="Project Completion"
                android:fontFamily="@font/lato"
                android:gravity="center_vertical"
                android:textColor="@color/poym"
                android:textSize="18sp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/variance_multiline"
                android:layout_width="0dp"
                android:padding="8dp"
                android:maxLines="1"
                android:layout_margin="2dp"
                android:fontFamily="@font/lato"
                android:layout_height="wrap_content"
                android:text="Variance Analysis"
                android:gravity="center_vertical"
                android:textColor="@color/poym"
                android:textSize="18sp"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/issue_bar"
                android:layout_width="0dp"
                android:padding="8dp"
                android:maxLines="1"
                android:layout_margin="2dp"
                android:layout_height="wrap_content"
                android:text="Project Issues"
                android:gravity="center_vertical"
                android:textColor="@color/poym"
                android:textSize="18sp"
                android:fontFamily="@font/lato"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/resource_bar"
                android:layout_width="0dp"
                android:padding="8dp"
                android:layout_margin="2dp"
                android:maxLines="1"
                android:fontFamily="@font/lato"
                android:layout_height="wrap_content"
                android:text="Resource Utilization"
                android:gravity="center_vertical"
                android:textColor="@color/poym"
                android:textSize="18sp"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/risk_hbar"
                android:layout_width="0dp"
                android:padding="8dp"
                android:maxLines="1"
                android:layout_margin="2dp"
                android:fontFamily="@font/lato"
                android:layout_height="wrap_content"
                android:text="Project Risk"
                android:gravity="center_vertical"
                android:textColor="@color/poym"
                android:textSize="18sp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/change_hbar"
                android:layout_width="0dp"
                android:padding="8dp"
                android:maxLines="1"
                android:layout_margin="2dp"
                android:fontFamily="@font/lato"
                android:layout_height="wrap_content"
                android:text="Change Request"
                android:gravity="center_vertical"
                android:textColor="@color/poym"
                android:textSize="18sp"
                android:layout_weight="1"/>
        </LinearLayout>
        <com.github.mikephil.charting.charts.LineChart
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/project_completion_piechart"/>
        <com.github.mikephil.charting.charts.BarChart
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:id="@+id/variance_analysis_line_chart"/>
        <com.github.mikephil.charting.charts.BarChart
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:id="@+id/project_issues_barchart"/>
        <com.github.mikephil.charting.charts.BarChart
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:id="@+id/resources_barchart"/>
        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:id="@+id/change_horizontal_barchat"/>
        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:id="@+id/risk_horizontal_barchat"/>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>