<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingBottom="5dp"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="42dp"
            android:fontFamily="@font/lato"
            android:textColor="@color/white_color"
            android:background="@color/yellow"
            android:text="resource list"
            android:id="@+id/resourcelist"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="42dp"
            android:fontFamily="@font/lato"
            android:maxLines="1"
            android:textColor="@color/white_color"
            android:background="@color/poymyellow"
            android:id="@+id/subtask"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="RESOURCE"
            android:fontFamily="@font/lato"
            android:background="@color/gray"
            android:gravity="center"
            android:textColor="@color/black_color"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/lato"
            android:text="R.qty/E.qty"
            android:background="@color/lite_gray"
            android:gravity="center"
            android:textColor="@color/black_color"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="0dp"
            android:background="@color/lite_gray"
            android:fontFamily="@font/lato"
            android:layout_weight="1"
            android:text="A.QTY"
            android:gravity="center"
            android:textColor="@color/black_color"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ProgressBar
            android:layout_width="match_parent"
            android:visibility="gone"
            android:id="@+id/progressbar"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/rv_resourcelist"
            android:layout_height="380dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:background="@drawable/spinner_border"
        android:layout_height="35dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:fontFamily="@font/lato"
            android:textColor="@color/white_color"
            android:background="@color/bottom_purple"
            android:text="REMARK"/>
        <Spinner
            android:layout_width="0dp"
            android:layout_weight="2.2"
            android:id="@+id/sp_resourcelist"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:paddingTop="5dp"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="42dp"
            android:fontFamily="@font/lato"
            android:textColor="@color/white_color"
            android:background="@color/bottom_purple"
            android:text="@string/cancel"
            android:id="@+id/resourcelist_cancel"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="42dp"
            android:fontFamily="@font/lato"
            android:textColor="@color/white_color"
            android:background="@color/poymyellow"
            android:text="@string/ok"
            android:id="@+id/resourcelist_ok"/>
    </LinearLayout>
</LinearLayout>
