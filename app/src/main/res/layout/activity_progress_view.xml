<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:gravity="center_vertical"
            android:paddingLeft="4dp"
            android:fontFamily="@font/lato"
            android:text="Select Project :"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_weight="1.5"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:background="@drawable/spinner_border"
            android:layout_marginLeft="5dp">
            <Spinner
                android:id="@+id/sp_project"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:fontFamily="@font/lato"
                android:descendantFocusability="blocksDescendants"
                android:drawSelectorOnTop="true"
                android:spinnerMode="dropdown"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:gravity="center_vertical"
            android:paddingLeft="4dp"
            android:text="Select Link :"
            android:textColor="#000"
            android:fontFamily="@font/lato"
            android:textSize="20sp"
            android:layout_weight="1.5"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:layout_height="35dp"
            android:orientation="vertical"
            android:background="@drawable/spinner_border"
            android:layout_marginLeft="5dp">
            <Spinner
                android:id="@+id/sp_link"
                android:layout_width="match_parent"
                android:fontFamily="@font/lato"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants"
                android:drawSelectorOnTop="true"
                android:spinnerMode="dropdown"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp">
        <EditText
            android:id="@+id/et_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:fontFamily="@font/lato"
            android:layout_marginRight="2dp"
            android:clickable="true"
            android:drawableRight="@drawable/ic_event_black_24dp"
            android:focusable="false" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:paddingLeft="4dp"
            android:gravity="center_vertical"
            android:text="Select Task :"
            android:fontFamily="@font/lato"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_weight="1.5"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:background="@drawable/spinner_border"
            android:layout_marginLeft="5dp">
            <Spinner
                android:id="@+id/sp_task"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:fontFamily="@font/lato"
                android:descendantFocusability="blocksDescendants"
                android:drawSelectorOnTop="true"
                android:spinnerMode="dropdown"/>
        </LinearLayout>
    </LinearLayout>
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProgressView.ProgressView" />
</LinearLayout>