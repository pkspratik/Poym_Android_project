<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:layout_width="wrap_content"
        android:id="@+id/survey_capture"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:fontFamily="@font/lato"
        android:paddingRight="15dp"
        android:background="@color/yellow"
        android:text="Capture Image"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/spinner_border"
            android:layout_height="wrap_content">
            <Spinner
                android:layout_width="60dp"
                android:layout_weight="1"
                android:id="@+id/details_spinner"
                android:layout_height="36dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:id="@+id/detail_edittext"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/lato"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/details_value"
            android:hint="Enter Text"
            android:gravity="center"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:id="@+id/detail_location"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/lato"
            android:layout_marginLeft="15dp"
            android:id="@+id/location_button"
            android:text="location"
            android:gravity="center"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/details_spinner1"
        android:visibility="gone"
        android:background="@drawable/spinner_border"
        android:layout_height="wrap_content">
        <Spinner
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/sp_details_spinner"
            android:gravity="center"
            android:layout_height="36dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:id="@+id/details_radio"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <RadioGroup
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:fontFamily="@font/lato"
            android:id="@+id/radiogroup"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            >
            <!--add this rgb-->
        <RadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/lato"
            android:id="@+id/rg_details_yes"
            android:text="yes"

            android:layout_height="wrap_content"/>
        <RadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/lato"
            android:id="@+id/rb_details_no"
            android:text="no"

            android:layout_height="wrap_content"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="4dp"
        android:layout_height="wrap_content">
    <Button
        android:layout_width="wrap_content"
        android:text="add"
        android:fontFamily="@font/lato"
        android:id="@+id/details_add"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="4dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@color/liteblue"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Parameter"
            android:gravity="center"
            android:textSize="20sp"
            android:fontFamily="@font/lato"
            android:textColor="@color/white_color"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Value"
            android:textSize="20sp"
            android:fontFamily="@font/lato"
            android:textColor="@color/white_color"
            android:gravity="center"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/rv_details_popup"
            android:layout_height="180dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:gravity="center">
        <Button
            android:id="@+id/survey_ok"
            android:fontFamily="@font/lato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submit" />
        <Button
            android:id="@+id/survey_cancel"
            android:fontFamily="@font/lato"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel" />
    </LinearLayout>
</LinearLayout>