<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_details"
            android:layout_width="88dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="Detail"
            android:layout_weight="1"
            android:textColor="@color/black_color" />

        <EditText
            android:id="@+id/edt_survey_detail"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:hint="Enter_Detail"
            android:textColor="@color/black_color"
            android:padding="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_prev_sl"
            android:layout_width="88dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="PrevDtl"
            android:layout_weight="1"
            android:textColor="@color/black_color" />


        <Spinner
            android:id="@+id/dropdown_prev_sl"
            android:layout_width="130dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:gravity="center"
            android:padding="5dp" />







       <!--<com.google.android.material.textfield.TextInputLayout
           style = "@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width = "100dp"
            android:layout_height = "wrap_content"
            android:hint = "dropdown">

            <AutoCompleteTextView android:id = "@+id/tv_with_spinner_behavior"
                android:layout_width = "match_parent"
                android:layout_height = "match_parent"
                android:text="Eng"
                android:clickable = "true"
                android:focusable = "true"
                android:focusableInTouchMode = "false"
                android:inputType = "none"/>

        </com.google.android.material.textfield.TextInputLayout>-->

        <AutoCompleteTextView
            android:id="@+id/autoCompletePrivous"
            android:layout_width="120dp"
            android:maxLines="1"
            android:fontFamily="@font/lato"
            android:backgroundTint="@color/signi_in_color"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:layout_marginBottom="14dp"
            android:gravity="center"
            android:textColor="@color/signi_in_color"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter_Details"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >



        <TextView
            android:id="@+id/tv_det"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text=""
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/black_color" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btn_survey_ok"
            android:layout_width="88dp"
            android:layout_height="38dp"
            android:text="Ok"
            android:textColor="@color/black_color" />



        <Button
            android:id="@+id/btn_survey_cancel"
            android:layout_width="88dp"
            android:layout_height="38dp"
            android:layout_marginLeft="70dp"
            android:text="cancel"
            android:textColor="@color/black_color" />

    </LinearLayout>

</LinearLayout>