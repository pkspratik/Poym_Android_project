<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/bottom_purple"
        android:layout_height="38dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="5.5"
            android:text="Pending Details"
            android:fontFamily="@font/lato"
            android:textSize="24sp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="@color/white_color"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/close_popup2"
            android:background="@drawable/close_image"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:background="@color/bottom_purple"
            android:gravity="center"
            android:fontFamily="@font/lato"
            android:text="S.Lno"
            android:textColor="@color/white_color"
            android:textSize="18dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/bottom_purple"
            android:text="Point A"
            android:gravity="center"
            android:fontFamily="@font/lato"
            android:textColor="@color/white_color"
            android:textSize="18dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/lato"
            android:background="@color/bottom_purple"
            android:text="/Point B"
            android:gravity="center_vertical"
            android:textColor="@color/white_color"
            android:textSize="18dp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/bottom_purple"
            android:gravity="center_vertical"
            android:fontFamily="@font/lato"
            android:text="Dist(M)"
            android:textColor="@color/white_color"
            android:textSize="18dp" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="540dp"
        android:id="@+id/rv_pendingpoints"/>
</LinearLayout>